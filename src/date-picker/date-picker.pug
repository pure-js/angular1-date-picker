.date-picker(ng-if="$ctrl.open")
    .layout-container
        .layout-column(style="flex-basis: 37px")
            button.date-picker__prev(type="button", title="Previous month", ng-click="$ctrl.prevMonth()")
                svg(xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18")
                    path(d="M11.56 5.56L10.5 4.5 6 9l4.5 4.5 1.06-1.06L8.12 9z")
        .layout-column(style="flex-basis: 72px")
            custom-select.date-picker-select-container(options="$ctrl.months", selected="$ctrl.selectedMonth", choose="$ctrl.selectMonth(value)")
        .layout-column(style="flex-basis: 72px")
            custom-select.date-picker-select-container(options="$ctrl.years", selected="$ctrl.selectedYear", choose="$ctrl.selectYear(value)")
        .layout-column(style="flex-basis: 37px")
            button.date-picker__next(type="button", title="Next month", ng-click="$ctrl.nextMonth()")
                svg(xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18")
                    path(d="M7.5 4.5L6.44 5.56 9.88 9l-3.44 3.44L7.5 13.5 12 9z")
    .layout-container
        .calendar
            .calendar__weekday(ng-repeat="$day in $ctrl.weekDays") {{$day}}
            .calendar__cell.calendar__cell_empty(ng-repeat="$cell in $ctrl.cellsBefore")
            button.calendar__cell.calendar__day(type="button",
                ng-repeat="$day in $ctrl.days",
                ng-click="$ctrl.pick($day)",
                ng-class="{'calendar__day_active': $ctrl.isSelectedDay($day), 'calendar__day_marked': $ctrl.isCurrentDay($day)}") {{$day}}
            .calendar__cell.calendar__cell_empty(ng-repeat="$cell in $ctrl.cellsAfter")
.date-picker-overlay(ng-if="$ctrl.open", ng-click="$ctrl.close()")
